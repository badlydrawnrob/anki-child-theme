{
  "name": "anki-child-theme",
  "version": "1.0.0",
  "description": "Extending the Anki Themes repo",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "mkdir -p build/ source/pandoc/ source/style/modules/ source/style/partials/ source/themes/cards/simple/ source/themes/cards/missing/",
    "css": "npx lessc source/style/main.less ./build/main.css",
    "pandoc": "npm run pandoc-pre && npm run simple-data && npm run missing-data",
    "pandoc-pre": "pandoc source/pandoc/pre.md -o ./build/pre.html",
    "simple-data": "pandoc --from markdown --to html source/themes/cards/simple/simple.md -s -o ./build/simple-data.html",
    "missing-data": "pandoc --from markdown --to html source/themes/cards/missing/missing.md -s -o ./build/missing-data.html",
    "build": "npm run setup && npm run css"
  },
  "repository": {
    "type": "git",
    "url": "github:badlydrawnrob/anki-child-theme"
  },
  "author": "Rob McDonald",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/badlydrawnrob/anki-child-theme/issues"
  },
  "homepage": "https://github.com/badlydrawnrob/anki#readme",
  "devDependencies": {
    "less": "^4.2.0",
    "print-first-css": "github:badlydrawnrob/print-first-css#dafa5ae",
    "anki": "github:badlydrawnrob/anki#2ed588d"
  }
}
