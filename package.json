{
  "name": "anki-child-theme",
  "version": "1.1.1",
  "description": "Extending the Anki Themes repo",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "npx lessc source/style/main.less ./build/style/main.css",
    "pandoc": "npm run readme && npm run pandoc-pre && npm run simple-data && npm run missing-data",
    "pandoc-stripped": "npm run simple-data-stripped && npm run missing-data-stripped",
    "pandoc-pre": "pandoc source/pandoc/pre.md -o ./build/data/pre.html",
    "simple-data": "pandoc --from markdown --to html source/themes/cards/simple/simple.md -s -o ./build/data/simple-data.html",
    "simple-data-stripped": "pandoc source/themes/cards/simple/simple-stripped.md -o ./build/data/simple-stripped.html",
    "missing-data": "pandoc --from markdown --to html source/themes/cards/missing/missing.md -s -o ./build/data/missing-data.html",
    "missing-data-stripped": "pandoc source/themes/cards/missing/missing-stripped.md -o ./build/data/missing-stripped.html",
    "readme": "pandoc --from markdown --to html README.md -s -o ./build/README.html",
    "build": "npm run css && npm run pandoc"
  },
  "repository": {
    "type": "git",
    "url": "github:badlydrawnrob/anki-child-theme"
  },
  "author": "Rob McDonald",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/badlydrawnrob/anki-child-theme/issues"
  },
  "homepage": "https://github.com/badlydrawnrob/anki#readme",
  "devDependencies": {
    "anki": "github:badlydrawnrob/anki#95b3053",
    "less": "^4.2.0",
    "print-first-css": "github:badlydrawnrob/print-first-css#dafa5ae"
  }
}
